FROM ubuntu:24.04

RUN ln -sf /bin/bash /bin/sh

ENV SHELL=/bin/bash

# prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

USER root
RUN apt-get update && apt-get install -y \
    openjdk-17-jdk \
    python3 \
    python3-pip \
    python3-venv \
    git \
    curl \
    wget \
    rsync \
    ansible \
    ca-certificates \
    gnupg \
    lsb-release 

# Docker CLI (without daemon)
RUN install -m 0755 -d /etc/apt/keyrings \
    && curl -fsSL https://download.docker.com/linux/ubuntu/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg \
    && chmod a+r /etc/apt/keyrings/docker.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" | tee /etc/apt/sources.list.d/docker.list > /dev/null \
    && apt-get update \
    && apt-get install -y docker-ce-cli \
    # cleanup 
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*


RUN groupadd docker

# Create jenkins user (non-root)
RUN useradd -m -s /bin/bash jenkins \
    && usermod -aG docker jenkins

# Switch to jenkins user pre uv installation
USER jenkins
WORKDIR /home/jenkins

# Install uv as jenkins user
RUN curl -LsSf https://astral.sh/uv/install.sh | sh

# Add uv to PATH
ENV PATH="/home/jenkins/.local/bin:${PATH}"

# Create agent directory (JAR will be downloaded at runtime)
RUN mkdir -p /home/jenkins/agent

# Verify tools are installed
RUN java -version \
    && uv --version \
    && docker --version

# Set working directory
WORKDIR /home/jenkins/agent

# Expose Jenkins agent port (optional, for visibility)
EXPOSE 50000

# Copy universal entrypoint script and set permissions
USER root
COPY scripts/jenkins-agent-entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Entrypoint - fixes docker.sock permissions, then runs agent as jenkins user
# Note: Jenkins master will provide URL, secret, name at startup as arguments
ENTRYPOINT ["/entrypoint.sh"]